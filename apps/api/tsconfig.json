{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": ["**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "adonis5-swagger",
      "adonis-lucid-filter",
      "@adonisjs/auth",
      "adonis5-jwt",
      "@stouder-io/adonis-scheduler",
      "adonis-lucid-soft-deletes",
      "@adonisjs/ally"
    ]
  }
}
